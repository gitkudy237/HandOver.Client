@rendermode InteractiveServer

<div class="carousel">
    <div class="carousel-inner" style="transform: translateX(@(-activeIndex * 100)%);">
        @for (int i = 0; i < Images.Count; i++)
        {
            <div class="carousel-item @(i == activeIndex ? "active" : "")">
                <img src="@Images[i]" alt="Image @(i + 1)">
            </div>
        }
    </div>
    <div class="carousel-indicators">
        @for (int i = 0; i < Images.Count; i++)
        {
            <span class="indicator @(i == activeIndex ? "active" : "")" @onclick="() => SetActiveImage(i)"></span>
        }
    </div>
    <button class="carousel-control-prev" @onclick="PreviousImage">❮</button>
    <button class="carousel-control-next" @onclick="NextImage">❯</button>
</div>

@code {
    [Parameter]
    public List<string> Images { get; set; } = new();

    private int activeIndex = 0;

    private void SetActiveImage(int index)
    {
        activeIndex = index;
    }

    private void PreviousImage()
    {
        activeIndex = (activeIndex - 1 + Images.Count) % Images.Count;
    }

    private void NextImage()
    {
        activeIndex = (activeIndex + 1) % Images.Count;
    }
}